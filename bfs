#include<iostream.h>

#include<conio.h>

int n,ed, edges[20][20],v,i,j,k,qu[20], f = 0 r = 0

void main()

{

clrscr();

cout<<"Enter no. of nodes: ";

cin>>n;

cout<<"Enter no. of edges: ";

cin>>ed;

cout<<"Enter edge details: "; for( k = 1 ;k<=ed;k++)

{

cin>>i>>j;

edges[i][j]=1; }

cout<<"Enter initial vertex/node: ";

cin>>v;

cout<<"BFS Result: ";

cout<<v<<" "; k = 1

while(k<n) { for j = 1; j <= n ;j++) { f(edges [v] * [j]! = 0 ) { qu[r++]=j;

}

}

v=qu[f++];

cout<<v<<" ";

k++; }

getch(); }